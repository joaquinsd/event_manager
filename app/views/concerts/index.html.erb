<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Band</th>
      <th>Attendance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.date %></td>
        <td><%= concert.group_name %></td>
        <td><%= concert.attendance %> people</td>
        <td><%= link_to 'Details', concert %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
        <td><%= link_to 'Delete', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Concert', new_concert_path %></p>
<p><%= link_to 'Bands', groups_path %></p>