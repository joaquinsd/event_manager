<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table class="table">
  <thead>
    <tr>
      <th>Band Name</th>
      <th>Number of Members</th>
      <th>Debut Date</th>
      <th>Composition</th>
      <th>Amount of Concerts</th>
      <th>Total Attendees</th>
      <th>Attendance by Concert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.members %></td>
        <td><%= group.debut_date %></td>
        <td><%= group.group_type %></td>
        <td><%= group.concerts_amount %></td>
        <td><%= group.total_attendance %></td>
        <td><%= group.concerts.pluck(:attendance).join(' - ') %></td>
        <td><%= link_to 'Details', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Band', new_group_path %></p>
<p><%= link_to 'Concerts', concerts_path %></p>